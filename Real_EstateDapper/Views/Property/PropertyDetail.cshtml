@model GetByIdPropertyDto
@{
    ViewData["Title"] = "PropertyDetail";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url('@Model.ImageUrl');" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10">
                <span class="d-inline-block text-white px-3 mb-3 property-offer-type rounded">@Model.OfferType</span>
                <h1 class="mb-2">@Model.Title</h1>
                <p class="mb-5"><strong class="h2 text-success font-weight-bold">$@Model.Price</strong></p>
            </div>
        </div>
    </div>
</div>

<div class="site-section site-section-sm">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <div class="slide-one-item home-slider owl-carousel">
                        <!-- Assuming you have multiple images; you can dynamically add them -->
                        <div><img src="@Model.ImageUrl" alt="Image" class="img-fluid"></div>
                        <!-- You can add more images if available -->
                    </div>
                </div>
                <div class="bg-white property-body border-bottom border-left border-right">
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <strong class="text-success h1 mb-3">$@Model.Price</strong>
                        </div>
                        <div class="col-md-6">
                            <ul class="property-specs-wrap mb-3 mb-lg-0 float-lg-right">
                                <li>
                                    <span class="property-specs">Oda</span>
                                    <span class="property-specs-number">@Model.Beds <sup>+</sup></span>
                                </li>
                                <li>
                                    <span class="property-specs">Banyo</span>
                                    <span class="property-specs-number">@Model.Baths</span>
                                </li>
                                <li>
                                    <span class="property-specs">Metre Kare</span>
                                    <span class="property-specs-number">@Model.SqFt</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                            <span class="d-inline-block text-black mb-0 caption-text">Ev tipi</span>
                            <strong class="d-block">@Model.CategoryName</strong>
                        </div>
                        <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                            <span class="d-inline-block text-black mb-0 caption-text">Yapılış Tılı</span>
                            <strong class="d-block">@Model.YearBuilt</strong>
                        </div>
                        <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                            <span class="d-inline-block text-black mb-0 caption-text">Metre Kare Fiyatı</span>
                            <strong class="d-block">$@Model.PricePerSqFt</strong>
                        </div>
                    </div>
                    <h2 class="h4 text-black">Açıklama</h2>
                    <p>@Model.Description</p>

                    <!-- Gallery -->
                    <div class="row no-gutters mt-5">
                        <div class="col-12">
                            <h2 class="h4 text-black mb-3">Galeri</h2>
                        </div>
                        <!-- Add images if available -->
                     
                            @await Component.InvokeAsync("_PropertyDetailGaleryComponentPartial" ,new{id=Model.Id})

                      
                        <!-- Add more images as needed -->
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
